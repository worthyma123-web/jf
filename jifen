    <div class="container mx-auto px-4 text-center">
      <p>张小艺积分兑换中心 | 所有权利均归本人</p>
    </div>
  </footer>

  <script>
    // 初始化变量
    let userPoints = 0;
    const POINTS_CODE = '666';
    
    // DOM元素
    const pointsDisplay = document.getElementById('points-display');
    const redeemCodeBtn = document.getElementById('redeem-code-btn');
    const codeModal = document.getElementById('code-modal');
    const closeModalBtn = document.getElementById('close-modal');
    const codeInput = document.getElementById('code-input');
    const submitCodeBtn = document.getElementById('submit-code');
    const toast = document.getElementById('toast');
    const toastMessage = document.getElementById('toast-message');
    const redeemBtns = document.querySelectorAll('.redeem-btn');
    const successModal = document.getElementById('success-modal');
    const successModalContent = document.getElementById('success-modal-content');
    const successMessage = document.getElementById('success-message');
    const closeSuccessModalBtn = document.getElementById('close-success-modal');
    
    // 更新积分显示
    function updatePointsDisplay() {
      pointsDisplay.textContent = userPoints;
      
      // 检查商品是否可兑换
      document.querySelectorAll('.item-card').forEach(card => {
        const cost = parseInt(card.dataset.cost);
        if (userPoints >= cost) {
          card.classList.remove('disabled');
        } else {
          card.classList.add('disabled');
        }
      });
    }
    
    // 显示提示消息
    function showToast(message, type = 'info') {
      toastMessage.textContent = message;
      
      // 设置提示类型样式
      toast.className = 'fixed bottom-4 left-1/2 transform -translate-x-1/2 bg-glass px-6 py-3 rounded-lg shadow-lg z-50';
      
      if (type === 'success') {
        toast.classList.add('border-l-4', 'border-success');
      } else if (type === 'error') {
        toast.classList.add('border-l-4', 'border-danger');
      } else if (type === 'warning') {
        toast.classList.add('border-l-4', 'border-warning');
      }
      
      // 显示提示
      toast.classList.remove('hidden');
      
      // 3秒后隐藏
      setTimeout(() => {
        toast.classList.add('hidden');
      }, 3000);
    }
    
    // 积分动画
    function createPointsAnimation(x, y, points) {
      const pointsEl = document.createElement('div');
      pointsEl.className = 'points-animation';
      pointsEl.textContent = `+${points}`;
      pointsEl.style.left = `${x}px`;
      pointsEl.style.top = `${y}px`;
      document.body.appendChild(pointsEl);
      
      // 动画结束后移除元素
      setTimeout(() => {
        document.body.removeChild(pointsEl);
      }, 1000);
    }
    
    // 创建庆祝效果
    function createCelebration(x, y) {
      const colors = ['#f00', '#0f0', '#00f', '#ff0', '#f0f', '#0ff'];
      
      for (let i = 0; i < 50; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        confetti.style.left = `${x}px`;
        confetti.style.top = `${y}px`;
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.width = `${Math.random() * 10 + 5}px`;
        confetti.style.height = `${Math.random() * 10 + 5}px`;
        confetti.style.opacity = Math.random() * 0.7 + 0.3;
        confetti.style.animationDuration = `${Math.random() * 2 + 2}s`;
        confetti.style.animationDelay = `${Math.random() * 0.5}s`;
        
        // 随机方向
        const angle = Math.random() * Math.PI * 2;
        const distance = Math.random() * 100 + 50;
        confetti.style.transform = `translate(${Math.cos(angle) * distance}px, ${Math.sin(angle) * distance}px)`;
        
        document.body.appendChild(confetti);
        
        // 动画结束后移除元素
        setTimeout(() => {
          document.body.removeChild(confetti);
        }, 5000);
      }
    }
    
    // 兑换码按钮点击事件
    redeemCodeBtn.addEventListener('click', () => {
      codeModal.classList.remove('hidden');
      codeInput.focus();
    });
    
    // 关闭模态框
    closeModalBtn.addEventListener('click', () => {
      codeModal.classList.add('hidden');
    });
    
    // 点击模态框外部关闭
    codeModal.addEventListener('click', (e) => {
      if (e.target === codeModal) {
        codeModal.classList.add('hidden');
      }
    });
    
    // 提交兑换码
    submitCodeBtn.addEventListener('click', () => {
      const code = codeInput.value.trim();
      
      if (code === POINTS_CODE) {
        // 增加积分
        userPoints += 1;
        updatePointsDisplay();
        
        // 显示成功消息
        showToast('积分增加成功！', 'success');
        
        // 创建积分动画
        const btnRect = redeemCodeBtn.getBoundingClientRect();
        const x = btnRect.left + btnRect.width / 2;
        const y = btnRect.top + btnRect.height / 2;
        createPointsAnimation(x, y, 1);
        
        // 关闭模态框
        codeModal.classList.add('hidden');
        codeInput.value = '';
      } else {
        // 显示错误消息
        showToast('兑换码无效，请重试！', 'error');
      }
    });
    
    // 按Enter键提交兑换码
    codeInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        submitCodeBtn.click();
      }
    });
    
    // 显示兑换成功弹窗
    function showSuccessModal(message) {
      successMessage.textContent = message;
      successModal.classList.remove('hidden');
      
      // 添加动画效果
      setTimeout(() => {
        successModalContent.classList.remove('scale-95', 'opacity-0');
        successModalContent.classList.add('scale-100', 'opacity-100');
      }, 10);
    }
    
    // 关闭兑换成功弹窗
    function closeSuccessModal() {
      successModalContent.classList.remove('scale-100', 'opacity-100');
      successModalContent.classList.add('scale-95', 'opacity-0');
      
      setTimeout(() => {
        successModal.classList.add('hidden');
      }, 300);
    }
    
    // 兑换商品
    redeemBtns.forEach(btn => {
      btn.addEventListener('click', (e) => {
        const card = e.target.closest('.item-card');
        const cost = parseInt(card.dataset.cost);
        const itemName = card.querySelector('h4').textContent;
        
        if (userPoints >= cost) {
          // 扣除积分
          userPoints -= cost;
          updatePointsDisplay();
          
          // 创建庆祝效果
          const btnRect = btn.getBoundingClientRect();
          const x = btnRect.left + btnRect.width / 2;
          const y = btnRect.top + btnRect.height / 2;
          createCelebration(x, y);
          
          // 禁用已兑换的商品
          card.classList.add('disabled');
          
          // 显示兑换成功弹窗
          showSuccessModal(`恭喜您成功兑换${itemName}！`);
        } else {
          // 显示错误消息
          showToast('积分不足，无法兑换！', 'error');
        }
      });
    });
    
    // 关闭兑换成功弹窗
    closeSuccessModalBtn.addEventListener('click', closeSuccessModal);
    
    // 点击弹窗外部关闭
    successModal.addEventListener('click', (e) => {
      if (e.target === successModal) {
        closeSuccessModal();
      }
    });
    
    // 初始化
    updatePointsDisplay();
  </script>
</body>
</html>
